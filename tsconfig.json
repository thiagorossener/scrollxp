{
  "compilerOptions": {
    "outDir": ".",
    "baseUrl": ".",
    "target": "es5",
    "module": "es6",
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "scrollxp": ["src/index"],
      "scrollxp/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "build", "dist"]
}
